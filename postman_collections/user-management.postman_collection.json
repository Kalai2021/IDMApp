{
  "info": {
    "name": "User Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/v1/users",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "users"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"firstName\": \"Test\",\n    \"lastName\": \"User\"\n}"
        }
      }
    },
    {
      "name": "Get User",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8080/api/v1/users/{{userId}}",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "users", "{{userId}}"]
        }
      }
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/v1/users/{{userId}}",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "users", "{{userId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"updated@example.com\",\n    \"firstName\": \"Updated\",\n    \"lastName\": \"User\"\n}"
        }
      }
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "http://localhost:8080/api/v1/users/{{userId}}",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "v1", "users", "{{userId}}"]
        }
      }
    }
  ]
} 